<configuration debug="false" scan="true" scanPeriod="60 seconds">

    <!-- VARIABLES -->
    <property name="LOGS_PATH" value="logs" />
    <property name="APPLICATION_FILE" value="${LOGS_PATH}/application.log"/>

    <property name="STDOUT_PATTERN" value="%magenta(%date{yyyy-MM-dd HH:mm:ss.SSS}) %highlight(%-7.7([%.5level])) %cyan(%32.32logger{16}) [%.9thread] %message%n%xException" />

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <withJansi>true</withJansi>
        <!-- encoders are assigned the type
             ch.qos.logback.classic.encoder.PatternLayoutEncoder by default -->
        <encoder>
            <pattern>%cyan(%d{HH:mm:ss.SSS}) %gray([%thread]) %highlight(%-5level) %magenta(%logger{36}) - %msg%n</pattern>
        </encoder>
    </appender>

    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${APPLICATION_FILE}</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${LOGS_ARCHIVE_PATH}/application-%d{yyyy-MM-dd}.log.gz</fileNamePattern>
            <!-- each archived file, size max 10MB -->
            <!-- <maxFileSize>10MB</maxFileSize> -->
            <!-- total size of all archive files, if total size > 20GB, it will delete old archived file -->
            <totalSizeCap>8GB</totalSizeCap>
            <!-- 60 days to keep -->
            <maxHistory>60</maxHistory>
        </rollingPolicy>
        <!-- set immediateFlush to false for much higher logging throughput -->
        <immediateFlush>false</immediateFlush>
        <encoder>
            <pattern>${STDOUT_PATTERN}</pattern>
        </encoder>
    </appender>


    <root level="info">
        <appender-ref ref="STDOUT" />
    </root>
</configuration>
